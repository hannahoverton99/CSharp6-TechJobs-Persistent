@using TechJobs6Persistent.ViewModels
@model AddJobViewModel


<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label>Job Name:</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Employer:</label>
        <select class="form-control" asp-for="SelectedId" asp-items="Model.Employers">
            <option value="">Select Employer</option>
        </select>
        <span asp-validation-for="SelectedId"></span>
    </div>
    <div class="form-group">
        <a asp-controller="Employer" asp-action="Create">Add New Employer</a>
    </div>
    
    <br />

    <input type="submit" value="Add Job" />
</form>